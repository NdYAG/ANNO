@import "lib/vendor"

aside
  position fixed
  z-index 1000
  top 0
  left 0
  bottom 0
  transform translateX(-200px)
  transition-transform(.3s)
  width 200px
  background #363636
  padding-top 1em
  background-image: url(unquote('data:image/png;base64,'))
  box-shadow inset -3px 0 8px #444
  &.show
    transform(translateX(0))
  ul
    margin 0
    padding 0
    li
      border-bottom 1px solid rgba(255,255,255,.1)
    a
      display block
      color #fefefe
      text-decoration none
      padding .8em 1.2em
      &:hover
        color lightseagreen
  .info
    position absolute
    left 0
    right 0
    bottom 0
  .banner
    height 120px
  .avatar
    display block
    width 100px
    height 100px
    border-radius 50px
    margin 0 auto
    background-size cover
    background-position center
